                                    <LineBreak />
                                    <Run x:Name="CountryMRText" Text="{Binding MortalityRateText,StringFormat={}{0}:}"
                                         FontSize="15" />
                                    <Run Text="{Binding DeathRate,StringFormat={} {0}%}" Foreground="#ff4757"
                                         FontSize="20"
                                         FontWeight="Bold" />
                                    <LineBreak />
                                </TextBlock>
                            </Grid>
                            <Grid Row="1">
                                <TextBlock x:Name="Worldwide" TextAlignment="Center" TextWrapping="WrapWithOverflow">
                                    <Run x:Name="wwStaticsText" Text="{Binding WorldwideStatisticsText}" FontSize="20" />

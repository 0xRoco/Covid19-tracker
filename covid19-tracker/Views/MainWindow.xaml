                                         FontSize="20" FontWeight="Bold" />
                                    <Run Text="{Binding NewDeaths,StringFormat={} {0:n0}}"
                                         FontSize="12" />
                                    <LineBreak />
                                    <Run x:Name="CountryTotalRecovered"
                                         Text="{Binding TotalRecoveredText,StringFormat={}{0}:}" FontSize="15" />
                                    <Run Text="{Binding Recovered,StringFormat={} {0:n0}}" Foreground="#2ed573"
                                         FontSize="20" FontWeight="Bold" />
                                    <LineBreak />
                                    <Run x:Name="CountryActiveText" Text="{Binding ActiveText,StringFormat={}{0}:}"
                                         FontSize="15" />
                                    <Run Text="{Binding Active,StringFormat={} {0:n0}}" Foreground="#ffa502"
                                         FontSize="20"
                                         FontWeight="Bold" />

                                       BadgePlacementMode="TopRight">
                    <Button Uid="1" Width="150" x:Name="NewsButton" Content="{Binding NewsBtn}" Height="50"
                            Foreground="{DynamicResource MaterialDesignBody}"
                            Background="{DynamicResource MaterialDesignPaper}"
                            BorderBrush="{x:Null}" Style="{StaticResource MaterialDesignFlatDarkBgButton}" Margin="5"

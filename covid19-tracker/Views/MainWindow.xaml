                                     Text="{Binding TotalConfirmedText,StringFormat={} {0} }"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                                <LineBreak />
                                <Run Text="{Binding TotalCases,StringFormat={} {0:n0}}" FontSize="25"
                                     Foreground="#ff4757" FontWeight="Bold" />
                                <Run Text="{Binding NewCases,StringFormat={}{0:n0} }" Foreground="#ff4757"
                                     FontWeight="Bold" />
                            </TextBlock>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                          Grid.Row="1" VerticalAlignment="Center" Margin="10">

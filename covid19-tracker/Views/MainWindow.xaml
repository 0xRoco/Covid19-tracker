                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="{Binding TotalCases,StringFormat={} {0:n0}}"
                                                     Foreground="#ff4757" FontWeight="Bold" />
                                                <Run Text="{Binding NewCases}" Foreground="#ff4757" FontSize="9"
                                                     FontWeight="Bold" />
                                                <Run Text=" " />
                                                <Run Text="{Binding Name}"
                                                     Foreground="{DynamicResource MaterialDesignBody}" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </ScrollViewer>

                        </Grid>

                        <Grid Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Row="0">
                                <TextBlock x:Name="SelectedCountry" TextAlignment="Center"
                                           TextWrapping="WrapWithOverflow">
                                    <Run Text="{Binding Name,StringFormat={}{0}\'s statistics}" />
                                    <LineBreak />
                                    <Run x:Name="CountryTotalCasesText"
                                         Text="{Binding TotalConfirmedText,StringFormat={}{0}:}" FontSize="15" />
                                    <Run Text="{Binding TotalCases,StringFormat={} {0:n0}}" Foreground="#ff4757"
                                         FontSize="20" FontWeight="Bold" />
                                    <Run Text="{Binding NewCases,StringFormat={} {0:n0}}" Foreground="#ff4757"
                                         FontSize="12" />
                                    <LineBreak />
                                    <Run x:Name="CountryTotalDeathsText"
                                         Text="{Binding TotalDeathsText,StringFormat={}{0}:}" FontSize="15" />
